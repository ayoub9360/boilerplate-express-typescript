{
  "name": "small-api",
  "version": "1.0.0",
  "description": "Collection of utility APIs - HTML to PDF, QR Code Generator, Favicon Grabber, and more",
  "main": "dist/server.js",
  "type": "module",
  "author": "Ayoub El Guendouz",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/server.ts | pnpm pino-pretty",
    "dev:docker": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:types": "tsc --noEmit",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.38.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "postgres": "^3.4.5",
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "openapi3-ts": "^4.5.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/swagger-ui-express": "^4.1.7",
    "drizzle-kit": "^0.30.1",
    "pino-pretty": "^13.0.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
